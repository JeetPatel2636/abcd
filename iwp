<!DOCTYPE html>
<html ng-app="storeApp">
<head>
  <meta charset="UTF-8">
  <title>Customer Registration - Departmental Store</title>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to bottom right, #fdfbfb, #ebedee);
      padding: 40px;
      color: #2c3e50;
    }

    .form-container {
      background-color: #ffffff;
      padding: 30px 35px;
      border-radius: 15px;
      max-width: 700px;
      margin: auto;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      border-left: 5px solid #2980b9;
    }

    h2, h4 {
      color: #34495e;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: inline-block;
      width: 160px;
      font-weight: 600;
    }

    input, select {
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      width: 60%;
      transition: 0.3s ease;
      background-color: #fdfdfd;
    }

    input[type="checkbox"] {
      width: auto;
      margin-right: 10px;
    }

    input:focus, select:focus {
      border-color: #2980b9;
      outline: none;
    }

    button {
      padding: 12px 24px;
      background-color: #27ae60;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
      font-size: 15px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #219150;
    }
  </style>
</head>
<body ng-controller="StoreController">

  <div class="form-container">
    <h2>ðŸ›’ Customer Registration</h2>

    <form name="regForm" ng-submit="calculateBill()">
      <div class="form-group">
        <label>Name:</label>
        <input type="text" ng-model="customer.name"
               pattern="^[a-zA-Z\s]+$"
               title="Only letters and spaces allowed"
               required
               oninput="this.value = this.value.replace(/[^a-zA-Z\s]/g, '')">
      </div>

      <div class="form-group">
        <label>Contact No.:</label>
        <input type="text" ng-model="customer.contact"
               maxlength="10"
               pattern="^[0-9]{10}$"
               title="Enter 10-digit phone number"
               required
               oninput="this.value = this.value.replace(/[^0-9]/g, '')">
      </div>

      <div class="form-group">
        <label>Gender:</label>
        <select ng-model="customer.gender" required>
          <option value="">Select</option>
          <option>Male</option>
          <option>Female</option>
          <option>Other</option>
        </select>
      </div>

      <h4>ðŸ§º Favourite Items</h4>
      <div class="form-group" ng-repeat="item in items">
        <label>
          <input type="checkbox" ng-model="item.selected" ng-change="toggleItem(item)">
          {{item.name}} (â‚¹{{item.price}})
        </label>
        Quantity:
        <input type="number" ng-model="item.quantity" min="1" ng-disabled="!item.selected">
      </div>

      <button type="submit">Submit & Generate Bill</button>
    </form>
  </div>

  <script>
    angular.module('storeApp', [])
      .controller('StoreController', function($scope) {
        $scope.items = [
          { name: 'Apples', price: 100 },
          { name: 'Bread', price: 40 },
          { name: 'Toothpaste', price: 55 },
          { name: 'Detergent', price: 90 },
          { name: 'Juice Pack', price: 60 }
        ];

        $scope.customer = {};

        $scope.toggleItem = function(item) {
          if (item.selected) {
            item.quantity = 1;
          } else {
            item.quantity = null;
          }
        };

        $scope.calculateBill = function() {
          const selectedItems = $scope.items.filter(item => item.selected && item.quantity > 0);
          const totalAmount = selectedItems.reduce((sum, item) => sum + item.quantity * item.price, 0);

          let billHTML = `
            <html>
              <head>
                <title>Customer Bill</title>
                <style>
                  body { font-family: 'Segoe UI', sans-serif; padding: 30px; background-color: #fafafa; }
                  h2 { color: #2c3e50; }
                  table { width: 100%; border-collapse: collapse; margin-top: 20px; background: #fff; }
                  th, td { padding: 12px; border-bottom: 1px solid #ddd; text-align: left; }
                  th { background-color: #2980b9; color: white; }
                  tr:hover { background-color: #f2f2f2; }
                </style>
              </head>
              <body>
                <h2>ðŸ§¾ Customer Bill</h2>
                <p><strong>Name:</strong> ${$scope.customer.name}</p>
                <p><strong>Contact:</strong> ${$scope.customer.contact}</p>
                <p><strong>Gender:</strong> ${$scope.customer.gender}</p>

                <table>
                  <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Amount (â‚¹)</th>
                  </tr>`;

          selectedItems.forEach(item => {
            billHTML += `
              <tr>
                <td>${item.name}</td>
                <td>${item.quantity}</td>
                <td>${item.quantity * item.price}</td>
              </tr>`;
          });

          billHTML += `
              <tr>
                <th colspan="2">Total</th>
                <th>â‚¹${totalAmount}</th>
              </tr>
            </table>
            </body>
            </html>`;

          const billWindow = window.open('', '_blank');
          billWindow.document.write(billHTML);
          billWindow.document.close();
        };
      });
  </script>

</body>
</html>
